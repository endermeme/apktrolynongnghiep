<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Trợ Lý Nông Nghiệp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_no_connection"
        app:srcCompat="@mipmap/ic_no_connection" /> <!-- Đóng thẻ ImageView đúng cách -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có kết nối Internet"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="☭ Bình Thanh Starfleet ☭"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/actionModeSplitBackground"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Thử lại"
        android:textColor="@android:color/white"
        android:id="@+id/retryButton" /> <!-- Thêm ID cho button để xử lý trong Java -->

</LinearLayout>
